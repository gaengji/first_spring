{{>layout/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
    <tr>
        <th>{{id}}</th>
        <td>{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>
</table>
<div class="mb-3">
    <span class="badge bg-info text-dark">조회수: {{article.views}}</span>
    <span class="badge bg warning text-dark">댓글: {{commentCount}}개</span>
</div>

<a href="/articles" class="btn btn-info">List</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>

{{>comments/_comments}}

{{>layout/footer}}